{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "nursery": {
        "noUnknownAtRule": "off"
      },
      "suspicious": {
        "useAwait": "off",
        "noConsole": "off"
      },
      "style": {
        "useBlockStatements": "off"
      },
      "complexity": {
        "noVoid": "off"
      }
    }
  }
}
